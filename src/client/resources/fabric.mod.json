{
  "schemaVersion": 1,
  "id": "weave-ui",
  "version": "${version}",
  "name": "Weave",
  "description": "Weave is a declarative and component-based UI library for Minecraft, making it easy to build beautiful and intuitive GUIs in Java.",
  "authors": [
    "Me!"
  ],
  "contact": {
    "homepage": "https://fabricmc.net/",
    "sources": "https://github.com/FabricMC/fabric-example-mod"
  },
  "license": "CC0-1.0",
  "icon": "assets/weave-ui/icon.png",
  "environment": "*",
  "entrypoints": {
    "client": [
      "tytoo.weave.WeaveClient"
    ]
  },
  "mixins": [
    {
      "config": "weave-ui.client.mixins.json",
      "environment": "client"
    }
  ],
  "depends": {
    "fabricloader": ">=0.17.2",
    "minecraft": "~1.21.4",
    "java": ">=21",
    "fabric-api": "*"
  },
  "suggests": {
    "another-mod": "*"
  }
}